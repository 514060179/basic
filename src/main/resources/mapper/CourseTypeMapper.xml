<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.simon.basics.dao.CourseTypeMapper" >
  <resultMap id="BaseResultMap" type="com.simon.basics.model.CourseType" >
    <id column="type_id" property="typeId" jdbcType="BIGINT" />
    <result column="type_name" property="typeName" jdbcType="VARCHAR" />
    <result column="type_series" property="typeSeries" jdbcType="BIGINT" />
    <result column="deleted" property="deleted" jdbcType="BIT" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <resultMap id="UnionResultMap" type="com.simon.basics.model.CourseTypeWithBLOBs" extends="BaseResultMap">
    <collection property="courseTypeList" ofType="com.simon.basics.model.CourseType" >
      <id column="child_type_id" property="typeId" jdbcType="BIGINT" />
      <result column="child_type_name" property="typeName" jdbcType="VARCHAR" />
    </collection>
  </resultMap>
  <sql id="Base_Column_List" >
    type_id, type_name, type_series, deleted, create_time, update_time
  </sql>
  <sql id="Union_Column_List" >
     ct1.type_id, ct1.type_name, ct1.type_series, ct1.deleted, ct1.create_time, ct1.update_time,
     ct2.type_id AS child_type_id,ct2.type_name AS child_type_name
  </sql>
  <select id="findParentListByTypeSeries" resultMap="UnionResultMap">
    select 
    <include refid="Union_Column_List" />
    from course_type ct1 LEFT JOIN course_type ct2 ON ct1.type_id=ct2.type_series
    WHERE ct1.type_series = 0
  </select>
  <select id="findChildListByTypeSeries" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select
    <include refid="Base_Column_List" />
    from course_type
    where type_series = #{typeId,jdbcType=BIGINT}
  </select>

</mapper>